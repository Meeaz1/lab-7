#include <stdio.h>

int main() {
    int рік;
    printf("Введіть вік: ");
    scanf("%d", &рік);

    int остаток = рік % 10;
    char* результат;

    if (рік >= 10 && рік <= 20) {
        результат = "років";
    } else if (остаток == 1) {
        результат = "рік";
    } else if (остаток >= 2 && остаток <= 4) {
        результат = "роки";
    } else {
        результат = "років";
    }

    printf("Результат: %s\n", результат);
    return 0;
}
